@model BookStorageApp.Models.Chapter

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Chapter</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.VolumeNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.VolumeNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ChapterNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ChapterNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Text)
            </dt>
            <dd class="col-sm-10">
                @Html.Raw(@Model.Text.Replace("\r\n", "<br />"))
            </dd>

        </dl>

        <form asp-controller="Chapter" asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-controller="Book" asp-action="Details" asp-route-id="@Model.Book.Id">Назад к описанию книги</a>

        </form>
    </div>
</div>