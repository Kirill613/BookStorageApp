@model BookStorageApp.ModelsView.RegisterViewModel

@{
    Layout = "_LayoutLogin";
}

<main class="form-signin w-100 m-auto">
    <form method="post" asp-controller="Account" asp-action="Register" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly"></div>
        <img class="mb-4" src="~/Image/bootstrap-logo.svg" alt="" width="72" height="57">
        <h1 class="h3 mb-3 fw-normal">Зарегистрируйтесь</h1>

        <div class="form-floating">
            <input class="form-control" id="floatingInput" placeholder="name@example.com" asp-for="Email">
            <label for="floatingInput" asp-for="Email"></label>
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-floating">
            <input asp-for="NickName" class="form-control" id="floatingInputNick" placeholder="nickname">
            <label asp-for="NickName" for="floatingInput"></label>
            <span asp-validation-for="NickName" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password">
            <label asp-for="Password" for="floatingInput"></label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="PasswordConfirm" class="form-control" id="floatingPasswordConfirm" placeholder="PasswordConfirm">
            <label asp-for="PasswordConfirm" for="floatingInput"></label>
            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="ImageFile" class="form-control" id="ImageFile" placeholder="Image">
            <label asp-for="ImageFile" accept="image/*"></label>
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>

        <button class="w-100 btn btn-lg btn-primary" type="submit">Регистрация</button>
        <p class="mt-5 mb-3 text-muted">&copy; 2022</p>
    </form>
</main>